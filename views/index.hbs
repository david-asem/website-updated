    document.addEventListener('DOMContentLoaded', function () {
        const slides = document.querySelectorAll('.community-image');
        const dots = document.querySelectorAll('.navigation-dot');
        const carousel = document.querySelector('.carousel');
        let currentIndex = 1; // Start from the first actual image
        const totalSlides = slides.length - 4; // Exclude the duplicated slides

        function setActiveSlide(index) {
            let offset = -(384 + 32) * (index + 1); // +1 to account for the duplicated slide at the beginning

            if (index === -1) {
                offset = -(384 + 32) * totalSlides;
            } else if (index === totalSlides) {
                offset = -(384 + 32);
            }

            carousel.style.transform = `translateX(${offset}px)`;

            slides.forEach((slide, i) => {
                slide.style.boxShadow = (i === index + 1) ? '0 10px 30px rgba(0, 0, 0, 0.8)' : 'none';
            });

            dots.forEach((dot, i) => {
                const circle = dot.querySelector('circle');
                if (i === index || (index === totalSlides && i === 0)) {
                    circle.setAttribute('fill', '#6CC24A');
                    circle.setAttribute('r', '8');
                } else {
                    circle.setAttribute('fill', '#CAD9C5');
                    circle.setAttribute('r', '6');
                }
            });

            currentIndex = index;
        }

        function handleTransitionEnd() {
            if (currentIndex === totalSlides) {
                carousel.style.transition = 'none';
                currentIndex = 0;
                carousel.style.transform = `translateX(-${(384 + 32)}px)`;
                setTimeout(() => {
                    carousel.style.transition = 'transform 0.5s ease';
                }, 0);
            } else if (currentIndex === -1) {
                carousel.style.transition = 'none';
                currentIndex = totalSlides - 1;
                carousel.style.transform = `translateX(-${(384 + 32) * totalSlides}px)`;
                setTimeout(() => {
                    carousel.style.transition = 'transform 0.5s ease';
                }, 0);
            }
        }

        dots.forEach(dot => {
            dot.addEventListener('click', () => {
                const index = parseInt(dot.getAttribute('data-index'), 10);
                setActiveSlide(index);
            });
        });

        carousel.addEventListener('transitionend', handleTransitionEnd);

        // Initialize first slide as active
        setActiveSlide(currentIndex);
    });
</script>





