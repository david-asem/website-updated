<script>
    document.addEventListener('DOMContentLoaded', function () {
        const texts = [
            { heading: "Our Financial Institutions Trust Us", video: "/images/hero_vid.mp4" },
            { heading: "Upgrade your business.", video: "/images/hero_forex.mp4" },
            { heading: "Empower Your Agri-Business", video: "/images/hero_agri.mp4" }
        ];

        const textSection = document.getElementById('textSection');
        const videoSource = document.getElementById('videoSource');
        const heroVideo = document.getElementById('heroVideo');
        let index = 0;

        function displayNextText() {
            const text = texts[index];
            textSection.innerHTML = `
        <div class="imageTextHero">
            <div style="width: 100%; text-align: center; color: white; font-size: 76px; font-family: 'Satoshi', sans-serif; font-weight: 900;">${text.heading}</div>
        </div>
        `;
            // Update the video source
            videoSource.src = text.video;
            heroVideo.load(); // Needed to reload the video with new source
            heroVideo.play(); // Ensure the video plays after source change

            index = (index + 1) % texts.length;
        }

        displayNextText();
        setInterval(displayNextText, 5000);
    });
</script>







    



