<div class="relative" x-data="{
                hoveritem: '',
                open: false,
                toggle() {
                    if (this.open) {
                        return this.close()
                    }
                    $refs.menuHolderolder.classList.remove('hidden')
                    this.open = true
                },
                close(focusAfter) {
                    this.open = false

                    focusAfter && focusAfter.focus()
                }
            }"
     x-id="['dropdown-button']">


    <button x-on:click="toggle()" :aria-expanded="open"
            :aria-controls="$id('dropdown-button')" class="text-xl mx-4 nav-link cursor-pointer">
        <div class="flex items-center text-white">
            <span>
                        Industries
            </span>
        </div>
    </button>

    <div  x-transition.origin.top.left x-ref="menuHolderolder" x-show="open" x-bind:class="open ? '' : 'hidden'" x-on:click.outside="close($refs.button)" class="hidden absolute z-40 left-0 bg-white border shadow-md rounded-md w-[600px] mt-2 flex flex-row h-[334px]">
        <div class="border-r-[10px] border-r-transparent border-l-[10px] border-l-transparent border-b-[15px] border-b-white absolute -top-2 left-6">

        </div>
        <div class="flex flex-col px-2 py-2 basis-3/4">
         <div @mouseover="hoveritem = 'banks'" class="flex my-1 hover:bg-gray-100 p-2 cursor-pointer rounded items-center">
                <div class="w-10 h-10 bg-white rounded-full flex flex-none overflow-hidden justify-center items-center">
                    <img src="/images/icons/bank.gif" class="h-9 w-9" />
                </div>

                <a href="/solutions/bank">
                    <div class="mx-2 flex flex-col leading-none">
                        <h2 class="font-bold text-xl">Banks</h2>
                    </div>
                </a>
            </div>
            <div @mouseover="hoveritem = 'government'" class="flex my-1 hover:bg-gray-100 p-2 cursor-pointer rounded  items-center">
