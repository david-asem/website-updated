<div class="relative" x-data="{
                hoveritem: '',
                open: false,
                toggle() {
                    if (this.open) {
                        return this.close()
                    }
                    $refs.menuHolderolder.classList.remove('hidden')
                    this.open = true
                },
                close(focusAfter) {
                    this.open = false

                    focusAfter && focusAfter.focus()
                }
            }"
     x-id="['dropdown-button']">


    <button x-on:click="toggle()" :aria-expanded="open"
            :aria-controls="$id('dropdown-button')" class="text-xl mx-4 nav-link cursor-pointer">
        <div class="flex items-center text-white">
            <span>
                        Solutions
            </span>

            
        </div>
    </button>

    <div  x-transition.origin.top.left x-ref="menuHolderolder" x-show="open" x-bind:class="open ? '' : 'hidden'" x-on:click.outside="close($refs.button)" class="hidden absolute z-40 left-0 bg-white border shadow-md rounded-md w-[600px] mt-2 flex flex-row min-h-[312px]">
        <div class="border-r-[10px] border-r-transparent border-l-[10px] border-l-transparent border-b-[15px] border-b-white absolute -top-2 left-6">

        </div>
        <div class="flex flex-col px-2 py-2 basis-3/4">


            <div @mouseover="hoveritem = 'Digital payments'"  class="flex my-1 hover:bg-gray-100 cursor-pointer p-2 rounded items-center ">

                <div class="w-10 h-10 bg-white rounded-full flex flex-none overflow-hidden justify-center items-center">
                    <img src="/images/icons/digi-pay.gif" class="h-9 w-9" />
                </div>

                <a href="/#solutions">
                    <div class="mx-2 flex flex-col leading-none">
                        <h2 class="font-bold text-xl">Digital payments</h2>
                    </div>
                </a>

            </div>

            <div @mouseover="hoveritem = 'Digital Infrastructure'" class="flex my-1 hover:bg-gray-100 p-2 cursor-pointer rounded items-center ">

                <div class="w-10 h-10 bg-white rounded-full flex-none overflow-hidden flex justify-center items-center">
                    <img src="/images/icons/infras.gif" class="h-9 w-9" />
                </div>

                <a href="/#solutions">
                    <div class="mx-2 flex flex-col leading-none">
                        <h2 class="font-bold text-xl">Digital Infrastructure</h2>
                    </div>
                </a>

            </div>



            <div @mouseover="hoveritem = 'Foreign Exchange'" class="flex my-1 hover:bg-gray-100 p-2 cursor-pointer rounded  items-center">

                <div class="w-10 h-10 bg-white rounded-full flex flex-none overflow-hidden justify-center items-center">
                    <img src="/images/icons/exchange.gif" class="h-9 w-9" />
                </div>

                <a href="/solutions/foreign-exchange">
                    <div class="mx-2 flex flex-col leading-none">
                        <h2 class="font-bold text-xl">Foreign Exchange</h2>
                    </div>
                </a>

            </div>


            <div @mouseover="hoveritem = 'Collections'" class="flex my-1 hover:bg-gray-100 p-2 cursor-pointer rounded items-center">

                <div class="w-10 h-10 bg-white rounded-full flex flex-none overflow-hidden justify-center items-center">
                    <img src="/images/icons/collection.gif" class="h-9 w-9" />
                </div>

                <a href="/#solutions">
                    <div class="mx-2 flex flex-col leading-none">
                        <h2 class="font-bold text-xl">Collections</h2>
                    </div>
                </a>
            </div>
        </div>
        
        <template x-if="hoveritem=='Digital payments'">
            <div class="flex flex-col basis-2/4 bg-[#F5F7FA]">
            <div class="rounded-xl my-6 mx-4 w-[216px] h-[154.7px] relative bg-[url('/images/menu/digital_payments_nav_img.png')] bg-cover">
            </div>
            <div>
                <p class="text-[#5D6066] text-[14px] pb-6 px-4 relative">
                    Cross border remittances & foreign exchange settlement services
                </p>
            </div>
        </div>
        </template>
        
         <template x-if="hoveritem=='Digital Infrastructure'">
             <div class="flex flex-col basis-2/4 bg-[#F5F7FA]">
                <div class="rounded-xl my-6 mx-4 w-[216px] h-[154.7px] relative bg-[url('/images/menu/digital_infra_nav_img.png')] bg-cover">
                </div>
                <div>
                    <p class="text-[#5D6066] text-[14px] pb-6 px-4 relative">
                        Secure web & mobile based application
                    </p>
                </div>
            </div>
         </template>
        
        <template x-if="hoveritem=='Foreign Exchange'">
             <div class="flex flex-col basis-2/4 bg-[#F5F7FA]">
            <div class="rounded-xl my-6 mx-4 w-[216px] h-[154.7px] relative bg-[url('/images/menu/forex_nav_img.png')] bg-cover">
            </div>
            <div>
                <p class="text-[#5D6066] text-[14px] pb-6 px-4 relative">
                    Nulla magnis duis vitae sit. Tellus neque fringilla et rhoncus at. Elit duis elit purus duis a elit quam dui viverra.
                </p>
            </div>
        </div>
        </template>
        <template x-if="hoveritem=='Collections'">
            <div class="flex flex-col basis-2/4 bg-[#F5F7FA]">
            <div class="rounded-xl my-6 mx-4 w-[216px] h-[154.7px] relative bg-[url('/images/menu/col_nav_img.png')] bg-cover">
            </div>
            <div>
                <p class="text-[#5D6066] text-[14px] pb-6 px-4 relative">
                    Nulla magnis duis vitae sit. Tellus neque fringilla et rhoncus at. Elit duis elit purus duis a elit quam dui viverra.
                </p>
            </div>
        </div>
        </template>
    </div>
</div>